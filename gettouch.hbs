<style>
    <style>
    /* Navbar Styling */
    /* Add your navbar styling here */

    /* Card List Styling */
   body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

   

    .card-list {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 20px;
    }

    .cards {
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        display: flex;
        align-items: center;
    }

    .card-img {
        width: 40px;
        height: 40px;
        margin-right: 20px;
    }

    .card-text {
        text-align: left;
    }

    .card-text-first {
        font-size: 1.2rem;
        font-weight: bold;
        margin-bottom: 0.5rem;
    }

    .card-text-next {
        font-size: 1rem;
        color: #666;
    }

    .get-in-touch {
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .get-in-heading {
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1rem;
        color: #333;
    }

    .name-email-phone {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        margin-bottom: 1rem;
    }

    .name-email-phone-input {
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
    }

    .textarea {
        padding: 1rem;
        border: 1px solid #ccc;
        border-radius: 5px;
        font-size: 1rem;
        resize: vertical;
        margin-bottom: 1rem;
    }

    .send-msg-btn {
        margin-top: 1rem;
        text-align: center;
    }

    .contact-btn {
        padding: 1rem 2rem;
        background-color: #3498db;
        color: #fff;
        border: none;
        border-radius: 5px;
        font-size: 1.2rem;
        cursor: pointer;
        transition: background-color 0.3s;
        text-decoration: none;
    }

    .contact-btn:hover {
        background-color: #2980b9;
    }
    .send-msg-btn a {
    display: inline-block;
    padding: 10px 20px;
    background-color: #3498db;
    color: #fff;
    border: none;
    border-radius: 5px;
    margin-bottom: 40px;
    font-size: 1.6rem;
    text-decoration: none;
    cursor: pointer;
    transition: background-color 0.3s;
}

.send-msg-btn a:hover {
    background-color: #2980b9;
}
 footer {
            text-align: center;
            padding: 10px;
            background-color: #f8f9fa;
            color: #110e0e;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

</style>

</style>
<div class="container">
    <div class="card-list">
        <div class="phone-card cards">
            <div class="card-img-div">
                <i class="fas fa-phone-alt card-img"></i>
            </div>
            <div class="card-text">
                <p class="card-text-first">
                    Phone
                </p>
                <p class="card-text-next">
                    +91 9932876978
                </p>
            </div>
        </div>
        <div class="email-card cards">
            <div class="card-img-div">
                <i class="fas fa-envelope card-img"></i>
            </div>
            <div class="card-text">
                <p class="card-text-first">
                    Email
                </p>
                <p class="card-text-next">
                    ishikakundu900@gmail.com
                </p>
            </div>
        </div>
        <div class="address-card cards">
            <div class="card-img-div">
                <i class="fas fa-map-marker-alt card-img"></i>
            </div>
            <div class="card-text">
                <p class="card-text-first">
                    Address
                </p>
                <p class="card-text-next">
                    Puruliya, West-Bengal
                </p>
            </div>
        </div>
    </div>
    <div class="get-in-touch">
        <form action="/contact" method="post">
            <div class="form-input">
                <h1 class="get-in-heading">Get in Touch</h1>
                <div class="name-email-phone">
                    <input type="text" name="name" id="" placeholder="Name" class="name-email-phone-input">
                    <input type="email" name="name" id="" placeholder="Email" class="name-email-phone-input">
                    <input type="phone" name="name" id="" placeholder="Address" class="name-email-phone-input">
                </div>
                <div class="text-message">
                    <textarea name="message" id="" cols="30" rows="10" class="textarea" placeholder="Message"></textarea>
                </div>
                <div class="send-msg-btn">
                    <a href="https://wa.me/9932876978?text=Name%3A%20{name}%0AEmail%3A%20{email}%0APhone%3A%20{phone}%0AMessage%3A%20{message}" target="_blank">Send Message via WhatsApp</a>
                </div>
            </div>
        </form>
    </div>
</div>


</div>
